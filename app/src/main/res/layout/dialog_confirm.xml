<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="60dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/circle_delete"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/dialog_holder"
        android:background="@drawable/dialog_background"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Deleting an item"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="You have selected to delete this item.\n\nIf this was the action you wanted, please confirm your choice or cancel request."
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialogbtn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_cancel"
        android:text="Cancel"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dialog_desc"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialogbtn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_delete"
        android:text="Delete"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_desc"
        android:layout_margin="8dp"/>

    </RelativeLayout>

</RelativeLayout>